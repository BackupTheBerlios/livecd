sub getStr {
	my ($idx) = @_;
	my $str = $strings{$idx}[$languages{$lang}];
	if (!defined($str)) {
		$str = $strings{$idx}[0];
		if (!defined($str)) {
			$str = "INVALID STRING $idx";
		}
	}
	return trUtf8($str);
}
