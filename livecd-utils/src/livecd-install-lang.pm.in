sub getMyLang {
	my $language = $languages{'en'};
	if (defined(%cmdline) && 
	    defined($cmdline{'lang'}) && 
	    defined($languages{$cmdline{'lang'}})) {
		$language = $languages{$cmdline{'lang'}}; 
	}
	$language;
}

sub getStr {
	my ($idx) = @_;
	my $str = $strings{$idx}[$lang];
	if (!defined($str)) {
		$str = $strings{$idx}[0];
		if (!defined($str)) {
			$str = "INVALID $idx";
		}
	}
	$str;
}


